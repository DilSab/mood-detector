@using MoodDetectorWebApp.Models
@{
    ViewBag.Title = "SessionsList";

}

<h2>List of all your sessions</h2>
<table class="table">
    <tr>
        <th>Session id</th>
        <th>Date</th>
        <th>Class</th>
        <th>Subject</th>
        <th>Comments</th>
        <th>Details</th>
        <th>Join Sessions</th>
    </tr>
    @foreach (SessionSummary item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.studentClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comment)
            </td>
            <td>
                @Html.ActionLink("View mood chart", "GetSessionMoodAverage", new { id = item.id })
            </td>
            <td>
                @Html.ActionLink("View Join Session info", "RedirectToJoinSessionList", new { id = item.id })
            </td>
        </tr>
    }
</table>



