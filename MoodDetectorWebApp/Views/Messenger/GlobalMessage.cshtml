@using MoodDetectorWebApp.Models

@model GlobalMessageModel
<link href="~/Assets/css/global-message.css" rel="stylesheet" type="text/css">

@{
    ViewBag.Title = "GlobalMessageView";
}

<h2>GlobalMessageView</h2>
<div class="row">
    <div class="col-5">

    </div>
    <div class="col-7">
        <div class="row">
            <div class="col">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="row mt-5 mb-3">
                        <div class="col-4">@Html.LabelFor(m => m.Title)</div>
                        <div class="col-8">@Html.TextBoxFor(m => m.Title, new { maxlength = 50 }) @Html.ValidationMessageFor(m => m.Title, "", new { @style = "color:red" })</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4">@Html.LabelFor(m => m.ExpirationDate)</div>
                        <div class="col-8">@Html.EditorFor(m => m.ExpirationDate, @Html.ValidationMessageFor(m => m.ExpirationDate, "", new { @style = "color:red" }))</div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-4">@Html.LabelFor(m => m.RecipientType)</div>
                        <div class="col-8">@Html.DropDownListFor(m => m.RecipientType, new SelectList(GlobalMessageModel.GetAllRecipientTypes()))</div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-4">@Html.LabelFor(m => m.Content)</div>
                        <div class="col-8">@Html.TextBoxFor(m => m.Content, new { @class= "content-field", maxlength = 500 }) @Html.ValidationMessageFor(m => m.Content, "", new { @style = "color:red" })</div>
                    </div>
                    <input type="submit" value="Post message" />
                }
            </div>
        </div>
    </div>
</div>

