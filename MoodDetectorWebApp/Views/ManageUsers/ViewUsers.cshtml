@{
    ViewBag.Title = "ViewUsers";
}

<h2>View users</h2>
@using (Html.BeginForm("AddUser", "ManageUsers"))
{
    <div>
        <input type="submit" value="Add user" />
    </div>
}

<table class="table">

    @foreach (Model.User item in Model)
    {
        if (item.AccessRights != "Admin")
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.ActionLink("Details/Edit", "EditUser", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
                </td>
            </tr>
        }
    }

</table>
