@model MoodDetectorWebApp.Models.JoinSessionModel

@{
    ViewBag.Title = "Session";
}


<link href="~/Assets/css/liveDetector-session.css" rel="stylesheet" type="text/css">

<body>
    <div class="container-fluid">
        <div class="row pb-5">
            <div class="session-label col-md-12">
                <h3>Session ID: @Model.DetectionId</h3>
                <h3>Joined as:  @Model.JoinName</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8" id="affdex_elements" style="width:680px;height:480px; display:none"></div>
            <div class="col-md-4">
                <div style="height:25em;">
                    <strong>EMOTION TRACKING RESULTS</strong>
                    <div id="results" style="word-wrap:break-word;"></div>
                </div>
                <div>
                    <strong>DETECTOR LOG MSGS</strong>
                </div>
                <div id="logs"></div>
            </div>
        </div>
        <div>
            <button id="start" onclick="onStart()">Start</button>
            <button id="stop" onclick="onStop()">Stop</button>
            <button id="reset" onclick="onReset()">Reset</button>            
            <p>
                
            </p>
        </div>
    </div>
</body>

<script type="text/javascript" src="https://download.affectiva.com/js/3.2.1/affdex.js"></script>
<script type="text/javascript" src="~/Assets/js/liveDetector.js"></script>