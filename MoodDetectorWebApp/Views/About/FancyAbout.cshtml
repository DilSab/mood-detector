@using MoodDetectorWebApp.Models

@model LoginModel

@{
    ViewBag.Title = "FancyAbout";
}

<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="@Url.Content("~/Images/a.jpg")" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h1>Analize your students' mood</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="@Url.Content("~/Images/b.jpg")" alt="Second slide">
            <div class="carousel-caption d-none d-md-block text-dark">
                <h1>Improve your lessons</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="@Url.Content("~/Images/c.jpg")" alt="Third slide">
            <div class="carousel-caption d-none d-md-block text-dark">
                <h1>Bring joy to learning</h1>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="mt-5 mb-3 text-danger text-center">
        @Html.ValidationMessage("CustomError")
    </div>
    <div class="row mt-5 mb-3 justify-content-center">
        <div>@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { placeholder = "Username", @class = "form-control" } })</div>
    </div>
    <div class="row mb-3 justify-content-center">
        <div>@Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Password", @class = "form-control" } })</div>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Login" />
        <p class="mb-3 mt-5"><i>New or forgot your login credentials? Contact your system administrator.</i></p>
    </div>
}

